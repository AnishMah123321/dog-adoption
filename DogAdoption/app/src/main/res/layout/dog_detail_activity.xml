<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
<LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

            <ImageView
                android:id="@+id/shelterImage"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:scaleType="fitXY"
                android:src="@drawable/ic_launcher_background"
                >

            </ImageView>

            <TextView
                android:id="@+id/dogName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DOG 1"
                android:background="@drawable/rectangles"
                android:fontFamily="@font/montserrat_regular"
                android:textColor="@color/black"
                android:layout_margin="10dp"
                android:padding="15dp"
                android:textSize="20sp">

            </TextView>
   <RelativeLayout
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_margin="10dp">

      <ImageView
          android:id="@+id/nameImage"
          android:src="@drawable/ic_name"
          style="@style/profileDetailsImage" />
      <TextView
          android:id="@+id/contactName"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:fontFamily="@font/montserrat_regular"
          android:text="Contact Name"
          android:padding="10dp"
          android:layout_toRightOf="@id/nameImage"
          android:textSize="15sp"
          android:background="@drawable/rectangles"
          android:layout_margin="10dp"
          android:textColor="@color/black">

      </TextView>
   </RelativeLayout>
   <RelativeLayout
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_margin="10dp">
      <ImageView
          android:id="@+id/mobileImage"
          android:src="@drawable/ic_mobile"
          style="@style/profileDetailsImage" />
      <TextView
          android:id="@+id/contactNumber"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:fontFamily="@font/montserrat_regular"
          android:text="Contact Number"
          android:padding="10dp"
          android:textSize="15sp"
          android:layout_toRightOf="@id/mobileImage"
          android:layout_margin="10dp"
          android:background="@drawable/rectangles"
          android:textColor="@color/black">

      </TextView>

   </RelativeLayout>

   <RelativeLayout
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
      android:layout_margin="10dp">

      <ImageView
          android:id="@+id/emailImage"
          android:src="@drawable/ic_email"
          style="@style/profileDetailsImage" />


      <TextView
          android:id="@+id/contactEmail"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:fontFamily="@font/montserrat_regular"
          android:text="Contact Email"
          android:textSize="15sp"
          android:padding="10dp"
          android:layout_toRightOf="@+id/emailImage"
          android:background="@drawable/rectangles"
          android:layout_margin="10dp"
          android:textColor="@color/black">

      </TextView>
   </RelativeLayout>

   <RelativeLayout
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
      android:layout_margin="10dp">
      <ImageView
          android:id="@+id/breedImage"
          android:src="@drawable/dogname"
          style="@style/profileDetailsImage" />

      <TextView
          android:id="@+id/Dbreed"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:fontFamily="@font/montserrat_regular"
          android:text="Dog Breed"

          android:background="@drawable/rectangles"
          android:layout_toRightOf="@+id/breedImage"
          android:textColor="@color/black"
          android:textSize="15dp"
          android:padding="10dp">
      </TextView>
   </RelativeLayout>
   <RelativeLayout
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_margin="10dp">
   <ImageView
       android:id="@+id/dogDImage"
       android:src="@drawable/dogdescription"
       style="@style/profileDetailsImage" />

      <TextView
          android:id="@+id/DogDescription"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:fontFamily="@font/montserrat_regular"
          android:text="Dog Description"
          android:background="@drawable/rectangles"
          android:layout_marginBottom="15dp"
          android:textColor="@color/black"
          android:layout_toRightOf="@+id/dogDImage"
          android:textSize="15dp"
          android:padding="10dp">
      </TextView>
   </RelativeLayout>



            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/rectangles">

            </View>

        </LinearLayout>
</ScrollView>
